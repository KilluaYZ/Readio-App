<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookReadActivity.readBookActivity"
    android:fitsSystemWindows="true">
    <TextView
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:fontFamily="@font/jianti"
        android:textStyle="bold"
        android:textColor="#938D8D"
        android:id="@+id/book_nameBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewpager"
        android:text=""/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        app:layout_constraintTop_toBottomOf="@+id/book_nameBar"
        app:layout_constraintBottom_toTopOf="@+id/pageBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
    </androidx.viewpager.widget.ViewPager>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/pageBar"
        android:fontFamily="@font/jianti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewpager"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text=""
        android:textSize="17sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>