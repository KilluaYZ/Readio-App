<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userPageActivity.editWorkActivity"
    android:padding="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editTopBar"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editBar">
        <TextView
            android:id="@+id/editExitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="16sp"/>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/paler_grey"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">
            <TextView
                android:id="@+id/saveDraftButton"
                android:padding="3dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="存草稿"
                android:textAlignment="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ScrollView
        android:id="@+id/editBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="editTopBar"
        app:layout_constraintBottom_toTopOf="@+id/tagBar">
        <EditText
            android:id="@+id/editPiece"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tagBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="publishBar"
        app:layout_constraintTop_toBottomOf="editBar"
        tools:layout_editor_absoluteX="5dp">
        <!--        this is tag-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>