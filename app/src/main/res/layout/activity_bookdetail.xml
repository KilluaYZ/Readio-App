<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/container"
    tools:context=".bookReadActivity.bookDetailActivity"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/detail_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/blue"
        tools:ignore="ExtraText">
        <!--标题-->
        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:backgroundTint="#00FFFFFF"
            tools:ignore="MissingConstraints"
            android:layout_alignParentTop="true">

            <ImageButton
                android:id="@+id/return_commend"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:backgroundTint="#0000"
                android:scaleType="fitCenter"
                android:src="@drawable/best_back"
                android:contentDescription="@string/go_back" />
            <TextView
                android:id="@+id/blank"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_gravity="start" />
            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:backgroundTint="#0000"
                android:scaleType="fitCenter"
                android:src="@drawable/share"
                android:contentDescription="shares" />
        </LinearLayout>

        <!--中间部分-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            android:layout_below="@id/head"
            android:layout_above="@id/bottom">

            <LinearLayout
                android:id="@+id/fixed_part"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:backgroundTint="#0000"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/picture"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:contentDescription="@string/picture_of_book"
                    android:src="@drawable/default_cover2"
                    tools:ignore="NestedWeights"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_margin="10dp">
                    <TextView
                        android:id="@+id/book_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/book_name"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/kaiti"/>
                    <TextView
                        android:id="@+id/author"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/author"
                        android:textSize="13sp"
                        android:layout_margin="5dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/jianti"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/words"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/words"
                            android:textSize="12sp"
                            android:fontFamily="@font/jianti"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="字"
                            android:textSize="12sp"
                            android:fontFamily="@font/jianti"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <include
                layout="@layout/middle_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!--底部-->
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:backgroundTint="#0000"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="#0000">
                <LinearLayout
                    android:id="@+id/addlinear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/add_bookmark"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:src="@drawable/bookmark"
                        android:contentDescription="加入书架"
                        android:backgroundTint="#0000"/>
                    <TextView
                        android:id="@+id/add_bookmark_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加入书架"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/readlinear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_toRightOf="@+id/addlinear"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/read"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:src="@drawable/open_book_icon"
                        android:contentDescription="开始阅读"
                        android:backgroundTint="#0000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始阅读"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/likelinear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/like_this_book"
                        android:layout_width="50dp"
                        android:layout_height="48dp"
                        android:src="@drawable/thumb_up_1"
                        android:contentDescription="点赞"
                        android:backgroundTint="#0000"/>
                    <TextView
                        android:id="@+id/like_this_book_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点赞"
                        android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>